# Run tests
test:
    pytest -vv -s src/tests

# Lint code with ruff
lint:
    ruff format .
    ruff check . --fix

# Check types with mypy
type-check:
    mypy .

# Build the project
build:
    hatch build

# Run all checks (linting, formatting check, type checking, and tests)
check:
    @echo "Checking code style..."
    just format --check
    @echo "Linting..."
    just lint
    @echo "Checking types..."
    just type-check
    @echo "Running tests..."
    just test

# Install dependencies
install:
    pip install -e .

# Pre-commit hooks setup
pre-commit-setup:
    pre-commit install

# Run pre-commit on all files
pre-commit-run:
    pre-commit run --all-files

# Alias for convenience
t: test
l: lint
c: check
i: install
