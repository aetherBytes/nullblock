# External MCP Services Configuration
# Copy this file to mcp-services.toml and configure your external MCP servers

# Default settings for all services
[defaults]
timeout_secs = 30
cache_ttl_secs = 300
auto_refresh = false

# Example: Claude Code MCP Server
# [services.claude-code]
# url = "https://api.claude.ai/mcp/jsonrpc"
# enabled = true
# description = "Claude Code MCP server"
# tags = ["ai", "code-assistance"]
#
# [services.claude-code.auth]
# bearer_token_env = "CLAUDE_API_KEY"

# Example: External tool provider with API key
# [services.toolprovider]
# url = "https://tools.example.com/mcp/jsonrpc"
# enabled = true
# description = "Example tool provider"
# tags = ["tools", "external"]
#
# [services.toolprovider.auth]
# api_key_env = "TOOLPROVIDER_API_KEY"
# api_key_header = "X-API-Key"

# Example: Custom MCP server with direct API key (not recommended for production)
# [services.custom]
# url = "https://custom-mcp.example.com/jsonrpc"
# enabled = true
# description = "Custom MCP server"
# tags = ["custom"]
#
# [services.custom.auth]
# api_key = "your-api-key-here"
# api_key_header = "Authorization"

# Example: Using environment variable for URL
# [services.dynamic]
# url = "${DYNAMIC_MCP_URL}"
# enabled = true
# description = "Dynamically configured MCP server"
# tags = ["dynamic"]
#
# [services.dynamic.auth]
# bearer_token_env = "DYNAMIC_MCP_TOKEN"
