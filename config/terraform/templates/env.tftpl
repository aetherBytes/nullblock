# Nullblock Environment Configuration
# Generated by Terraform for environment: ${environment}
# Generated on: ${formatdate("YYYY-MM-DD HH:mm:ss", timestamp())}

# Environment
ENVIRONMENT=${environment}

# Infrastructure Services
POSTGRESQL_HOST=${hosts.postgresql}
POSTGRESQL_PORT=${services.postgresql}
REDIS_HOST=${hosts.redis}
REDIS_PORT=${services.redis}
IPFS_HOST=${hosts.ipfs}
IPFS_PORT=${services.ipfs}

# Backend Services
MCP_SERVER_HOST=${hosts.mcp_server}
MCP_SERVER_PORT=${services.mcp_server}
ORCHESTRATION_HOST=${hosts.orchestration}
ORCHESTRATION_PORT=${services.orchestration}
EREBUS_HOST=${hosts.erebus}
EREBUS_PORT=${services.erebus}

# Agent Services
AGENTS_HOST=${hosts.general_agents}
AGENTS_PORT=${services.general_agents}
HECATE_HOST=${hosts.hecate_agent}
HECATE_PORT=${services.hecate_agent}

# Frontend Services
FRONTEND_HOST=${hosts.frontend}
FRONTEND_PORT=${services.frontend}

# LLM Services
LM_STUDIO_HOST=${hosts.lm_studio}
LM_STUDIO_PORT=${services.lm_studio}

# Frontend API URLs (for Vite)
VITE_MCP_API_URL=http://${hosts.mcp_server}:${services.mcp_server}
VITE_EREBUS_API_URL=http://${hosts.erebus}:${services.erebus}
VITE_ORCHESTRATION_API_URL=http://${hosts.orchestration}:${services.orchestration}
VITE_AGENTS_API_URL=http://${hosts.general_agents}:${services.general_agents}
VITE_HECATE_API_URL=http://${hosts.hecate_agent}:${services.hecate_agent}

# Service Overrides (if any)
%{ for service, override in overrides ~}
%{ if override.host != null ~}
${upper(service)}_HOST=${override.host}
%{ endif ~}
%{ if override.port != null ~}
${upper(service)}_PORT=${override.port}
%{ endif ~}
%{ endfor ~}
